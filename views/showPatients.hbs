<h1>All Patients</h1>
<a href="/patients/newPatient" class="btn btn-primary">Add Patient</a>
<a href="/patients" class="btn btn-success">Reset Page</a>

<nav class="navbar navbar-light bg-light">
	<div class="container-fluid">
		<form class="d-flex" action="/patients" method="POST">
			<input
				class="form-control me-2"
				type="search"
				placeholder="Search"
				aria-label="Search"
				name="search"
			/>
			<button
				class="btn btn-outline-success"
				type="submit"
			>Search</button>
		</form>
	</div>
</nav>

<table class="table table-bordered table-hover">
	<thead class="thead-dark">
		<tr>
			<th scope="col">Patient Id</th>
			<th scope="col">First Name</th>
			<th scope="col">Middle Name</th>
			<th scope="col">Last Name</th>
			<th scope="col">Phone Number</th>
			<th scope="col" class="text-end">Action</th>
		</tr>
	</thead>
	<tbody>
		{{#each rows}}
			<tr>
				<th scope="row">{{this.PatientId}}</th>
				<td>{{this.FirstName}}</td>
				<td>{{this.MiddleName}}</td>
				<td>{{this.LastName}}</td>
				<td>{{this.PhoneNumber}}</td>
				<td class="text-end">
					<a
						href="/patients/viewPatient/{{this.PatientId}}"
						type="button"
						class="btn btn-light"
					><i class="bi bi-eye"></i>
						View</a>
					<a
						href="/patients/editPatient/{{this.PatientId}}"
						type="button"
						class="btn btn-light"
					><i class="bi bi-pencil"></i>
						Edit</a>

					<a
						href="/patients/{{this.PatientId}}"
						type="button"
						class="btn btn-light"
					><i class="bi bi-person-x"></i>
						Delete</a>
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>